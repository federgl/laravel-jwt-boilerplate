<?xml version="1.0"?>
<ruleset name="DegreeCalculator">
    <description>These are DegreeCalculator's coding standards. Also check escapestudios/symfony2-coding-standard</description>
    <rule ref="Generic.NamingConventions.ConstructorName"/>
    <rule ref="Generic.PHP.DeprecatedFunctions"/>
    <rule ref="Generic.PHP.DisallowShortOpenTag"/>
    <rule ref="Generic.PHP.NoSilencedErrors"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
    <rule ref="Generic.CodeAnalysis.ForLoopShouldBeWhileLoop"/>
    <rule ref="Squiz.PHP.InnerFunctions"/>
    <rule ref="Squiz.Classes.LowercaseClassKeywords"/>
    <rule ref="Squiz.WhiteSpace.SemicolonSpacing"/>
    <rule ref="Squiz.WhiteSpace.LogicalOperatorSpacing"/>
    <rule ref="Squiz.Strings.DoubleQuoteUsage"/>
    <rule ref="Squiz.Scope.StaticThisUsage"/>
    <rule ref="Squiz.Operators.ValidLogicalOperators"/>

    <rule ref="../../../../../app/Packages/CodeSniffer/Standards/DegreeCalculator/Sniffs/TypeHints/CustomDeclareStrictTypesSniff.php">
        <properties>
            <property name="spacesCountAroundEqualsSign" value="1"/>
            <property name="newlinesCountBetweenOpenTagAndDeclare" value="2"/>
        </properties>
    </rule>

    <rule ref="../../../../../app/Packages/CodeSniffer/Standards/DegreeCalculator/Sniffs/Namespaces/CustomUnusedUsesSniff.php">
        <properties>
            <property name="searchAnnotations" value="true"/>
        </properties>
    </rule>

</ruleset>
